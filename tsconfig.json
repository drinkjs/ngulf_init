{
  "compilerOptions": {
    "module": "es2020",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "inlineSourceMap": true,
    "outDir": "dist",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution":"Node",
    "esModuleInterop":true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src"],
}
